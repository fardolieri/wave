  "private": true,
  "scripts": {
    "dev": "quasar dev --mode pwa",
    "ngrok": "ngrok http https://localhost:9200/",
    "build": "quasar build --mode pwa",
    "build-for-gh": "cross-env PUBLIC_PATH=/wave npm run build",
    "deploy": "gh-pages --dist dist/pwa --no-history",
    "serve": "node node_modules/@quasar/cli/bin/quasar.js serve --https --port 3000 --cert=cert/cert.pem --key=cert/key.pem dist/pwa",
    "lint:eslint": "cross-env TIMING=1 eslint --ext .js,.ts,.vue ./",
    "lint:vue-tsc": "vue-tsc --noEmit",
    "format": "prettier --write \"**/*.{js,ts,vue,,html,md,json}\" --ignore-path .gitignore",
    "test": "playwright test"
  },
  "dependencies": {
    "@quasar/extras": "^1.15.10",
